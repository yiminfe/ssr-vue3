{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "composite": true,
    "types": ["node", "element-plus/global"],
    "preserveValueImports": false,
    "target": "esnext",
    "module": "esnext",
    "checkJs": false
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
